<?xml version="1.0" encoding="utf-8"?>
<com.celivad.widget.CommeunityItem
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:elevation="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginBottom="24dp"
        android:background="@color/background_main"
        android:layout_height="280dp">

    <TextView
            android:layout_width="0dp"
            android:textSize="22sp"
            android:text="BIGFISH BEGONIA"
            android:textColor="@android:color/white"
            android:layout_margin="24dp"
            android:id="@+id/titlei"
            app:layout_constraintEnd_toStartOf="@+id/icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:singleLine="true"
            android:layout_height="wrap_content"/>
    <View
            android:layout_width="80dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="24dp"
            app:layout_constraintTop_toBottomOf="@id/titlei"
            android:id="@+id/view"
            android:background="@color/colorAccent"
            android:layout_height="2dp"/>

    <TextView
            android:layout_width="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="I see it has the opportunity to becom a cult classic in 10 years."
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintStart_toStartOf="parent"
            android:maxLines="2"
            app:layout_constraintEnd_toStartOf="@id/icon"
            android:id="@+id/say"
            app:layout_constraintBottom_toTopOf="@+id/user_icon"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/view"
            android:layout_height="0dp"/>

    <ImageView
            android:layout_width="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="30dp"
            android:scaleType="centerInside"
            android:src="@mipmap/love"
            android:clickable="true"
            android:id="@+id/love"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            android:layout_height="20dp"/>

    <ImageView
            android:layout_width="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/love"
            android:layout_margin="30dp"
            android:scaleType="centerInside"
            android:src="@mipmap/comment"
            android:id="@+id/comment"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            android:layout_height="20dp"/>


    <TextView
            android:layout_width="wrap_content"
            android:singleLine="true"
            app:layout_constraintEnd_toStartOf="@id/icon"
            app:layout_constraintBottom_toBottomOf="@id/icon"
            android:layout_marginEnd="24dp"
            android:id="@+id/user"
            android:layout_marginBottom="6dp"
            android:textSize="12sp"
            android:text="Celivad"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"/>
    <ImageView
            android:layout_width="40dp"
            app:layout_constraintEnd_toStartOf="@id/icon"
            app:layout_constraintBottom_toTopOf="@id/user"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginEnd="24dp"
            android:id="@+id/user_icon"
            android:layout_marginBottom="12dp"
            android:layout_height="40dp"/>

    <ImageView
            android:layout_width="120dp"
            android:layout_margin="24dp"
            android:id="@+id/icon"
            android:scaleType="centerCrop"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="0dp"/>
</com.celivad.widget.CommeunityItem>