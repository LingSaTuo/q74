<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <com.celivad.widget.MenuTabGroup
            android:layout_width="match_parent"
            android:id="@+id/menugroup"
            android:layout_height="wrap_content">

        <com.celivad.widget.MenuTabItem
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="#fc9b1b"
                app:icon="@mipmap/mov"
                app:title="电影"
                app:layout_constraintEnd_toStartOf="@id/tv"
                android:id="@+id/mov"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="180dp"/>

        <com.celivad.widget.MenuTabItem
                android:layout_width="0dp"
                app:tint="#b34255"
                app:icon="@mipmap/tv"
                app:title="电视剧"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/mov"
                android:background="@color/colorPrimary"
                android:id="@+id/tv"
                android:layout_height="180dp"/>

        <com.celivad.widget.MenuTabItem
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/mov"
                android:background="@color/colorPrimary"
                app:icon="@mipmap/ct"
                app:tint="#dee62a"
                app:title="动漫"
                android:id="@+id/ct"
                android:layout_height="180dp"/>

        <com.celivad.widget.MenuTabItem
                android:layout_width="0dp"
                app:layout_constraintStart_toEndOf="@id/ct"
                app:layout_constraintTop_toBottomOf="@id/tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:icon="@mipmap/tb"
                app:tint="#4ce1ed"
                app:title="恐怖"
                android:id="@+id/terrorist"
                android:layout_height="180dp"/>

        <com.celivad.widget.MenuTabItem
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/ct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/ct"
                app:icon="@mipmap/action"
                app:tint="#d64c8d"
                app:title="动作"
                android:id="@+id/action"
                android:layout_height="180dp"/>


    </com.celivad.widget.MenuTabGroup>
</android.support.v4.widget.NestedScrollView>