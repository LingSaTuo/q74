<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@color/background_main"
        android:layout_height="80dp">

    <ImageView
            android:layout_width="60dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:id="@+id/love_icon"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="60dp"/>

    <TextView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@id/love_icon"
            app:layout_constraintTop_toTopOf="@id/love_icon"
            android:singleLine="true"
            android:text="Title"
            android:id="@+id/titlei"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginStart="24dp"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@id/love_icon"
            app:layout_constraintTop_toBottomOf="@id/titlei"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:text="Title"
            android:id="@+id/sub"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            android:textColor="@color/subTitle"
            android:layout_marginStart="24dp"
            android:layout_height="wrap_content"/>

    <ImageView
            android:layout_width="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/loved"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="30dp"
            android:src="@mipmap/love"
            android:tint="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="80dp"/>
</android.support.constraint.ConstraintLayout>